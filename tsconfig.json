{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": false,
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "types": ["node"],
    "baseUrl": "."
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "node_modules"
  ]
}